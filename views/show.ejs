<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    
    <div class="ui top attached"> <!-- ui top attached segment - adds a border -->
        <div class="item">
            <img class="ui centered rounded image" src= "<%= blog.image %>">
            
            <div class="content">
                <span><%= blog.created.toDateString() %></span> <!-- toDateString() - makes the date in readable format -->
            </div>
            
            <div class="description">
                <p><%= blog.body %></p>
            </div>
            
            <a class="ui orange button" href="/blogs/<%= blog._id %>/edit">Edit</a>
            
            <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button id="delete" class="ui red button">Delete</button>
            </form>
            
            
        </div>
    </div>
</div>

<% include ./partials/footer %>